<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.groupstp.supply.web.positionsupplier.PositionSupplierBrowse"
        messagesPack="com.groupstp.supply.web.positionsupplier">
    <dsContext>
        <valueCollectionDatasource id="ds">
            <properties idProperty="position">
                <property class="com.groupstp.supply.entity.QueriesPosition"
                          name="position"/>
            </properties>
        </valueCollectionDatasource>
    </dsContext>
    <dialogMode height="95%"
                resizable="true"
                width="95%"/>
    <layout expand="tab"
            spacing="true">
        <filter id="filter"
                applyTo="tab"
                datasource="ds">
            <properties include=".*"/>
        </filter>
        <hbox spacing="true">
            <button id="btnAdd"
                    caption="msg://Add supplier"
                    icon="PLUS"
                    invoke="onBtnAddClick"/>
            <button id="btnMessage"
                    caption="msg://Message"
                    icon="ENVELOPE"
                    invoke="onBtnMessageClick"/>
            <button id="btnClose"
                    caption="msg://Close"
                    align="TOP_RIGHT"
                    invoke="onBtnCloseClick"/>

        </hbox>

        <table id="tab"
               width="100%">
            <columns>
                <column id="position"/>
            </columns>
            <rows datasource="ds"/>
        </table>
    </layout>
</window>
