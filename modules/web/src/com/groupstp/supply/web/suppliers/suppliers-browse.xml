<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.groupstp.supply.web.suppliers.SuppliersBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.groupstp.supply.web.suppliers">
    <dsContext>
        <datasource id="suppliersDs"
                    class="com.groupstp.supply.entity.Suppliers"
                    view="suppliers-view"/>
        <groupDatasource id="suppliersCollectionDs"
                         class="com.groupstp.supply.entity.Suppliers"
                         view="suppliers-view">
            <query>
                <![CDATA[select e from supply$Suppliers e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="suppliersCollectionDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="fullName"/>
                        <column id="email"/>
                        <column id="contacts"/>
                        <column id="inn"/>
                    </columns>
                    <rows datasource="suppliersCollectionDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="suppliersDs">
                        <column width="250px">
                            <field caption="Название"
                                   property="name"/>
                            <field caption="Полное название"
                                   property="fullName"/>
                            <field caption="ИНН"
                                   property="inn"/>
                            <field caption="Контакты"
                                   property="contacts"/>
                            <field caption="Email"
                                   property="email"/>
                            <field caption="Комментарии"
                                   property="comments"
                                   rows="5"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
