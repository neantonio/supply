<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.groupstp.supply.web.settings.SettingsEdit"
        datasource="settingsDs"
        focusComponent="fieldGroup"
        messagesPack="com.groupstp.supply.web.settings">
    <dsContext>
        <datasource id="settingsDs"
                    class="com.groupstp.supply.entity.Settings"
                    view="settings-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <hbox spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="settingsDs">
                <column>
                    <field property="key"/>
                    <field property="text"/>
                    <field property="booleanValue"/>
                    <field property="bigDecimalValue"/>
                    <field property="dateTimeValue"/>
                    <field property="dateValue"/>
                    <field property="doubleValue"/>
                    <field property="integerValue"/>
                    <field property="longValue"/>
                    <field property="timeValue"/>
                    <field property="savedObject"
                           rows="5"/>
                    <field property="savedEnum"
                           rows="5"/>
                </column>
            </fieldGroup>
            <grid spacing="true">
                <columns count="2"/>
                <rows>
                    <row>
                        <lookupField id="lookupFieldClass"
                                     caption="msg://lookupFieldClass"
                                     pageLength="25"/>
                        <lookupField id="lookupFieldEntity"
                                     caption="msg://lookupFieldEntity"
                                     datasource="settingsDs"
                                     pageLength="25"
                                     property="savedObject"/>
                    </row>
                    <row>
                        <lookupField id="lookupFieldEnum"
                                     caption="msg://lookupFieldEnum"
                                     pageLength="25"/>
                        <lookupField id="lookupFieldEnumValue"
                                     caption="msg://lookupFieldEnumValue"
                                     datasource="settingsDs"
                                     pageLength="25"
                                     property="savedEnum"/>
                    </row>
                </rows>
            </grid>
        </hbox>
        <buttonsPanel align="BOTTOM_LEFT">
            <button id="buttonOk"
                    caption="Ok"
                    description="OK"
                    invoke="onOkBtnClick"/>
            <button id="buttonCancel"
                    action="windowClose"
                    caption="Cancel"
                    description="Cancel"/>
            <button id="buttonClearBoolean"
                    caption="Убрать boolean"
                    invoke="onClearBooleanBtnClick"/>
        </buttonsPanel>
    </layout>
</window>
