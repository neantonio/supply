<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.groupstp.supply.web.queryworkflow.QueryWorkflowBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.groupstp.supply.web.queryworkflow">
    <dsContext>
        <datasource id="queryWorkflowDs"
                    class="com.groupstp.supply.entity.QueryWorkflow"
                    view="queryWorkflow-view">
            <collectionDatasource id="detailsDs"
                                  property="details"/>
        </datasource>
        <groupDatasource id="queryWorkflowsDs"
                         class="com.groupstp.supply.entity.QueryWorkflow"
                         view="queryWorkflow-view">
            <query>
                <![CDATA[select e from supply$QueryWorkflow e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="queryWorkflowsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="refresh"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                    </columns>
                    <rows datasource="queryWorkflowsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="refreshBtn"
                                action="table.refresh"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="detailsTable"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="queryWorkflowDs">
                        <column width="300px">
                            <field property="name"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <table id="detailsTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="sourceStage"/>
                        <column id="destStage"/>
                        <column id="priority"/>
                        <column id="validation"/>
                        <column id="validationScript"/>
                        <column id="conditions"/>
                        <column id="script"/>
                    </columns>
                    <rows datasource="detailsDs"/>
                    <buttonsPanel>
                        <button action="detailsTable.create"/>
                        <button action="detailsTable.edit"/>
                        <button action="detailsTable.remove"/>
                    </buttonsPanel>
                </table>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
